{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,                    // Autoriser les fichiers .js
    "esModuleInterop": true,           //  Pour import JS/ES modules sans erreur
    "module": "esnext",                // Compatible avec les imports dynamiques modernes
    "moduleResolution": "node",       //  Pour bien r√©soudre les modules comme pdfjs-dist
    "resolveJsonModule": true,        // (utile si tu importes du JSON)
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
